@model Bloggi.Web.Models.ViewModels.EditTagRequet

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Tags</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label" for="name">ID</label>
                <input type="text" class="form-control" asp-for="Id" id="id" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input type="text" class="form-control" asp-for="Name" id="name" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="displayName">Display Name</label>
                <input type="text" class="form-control" asp-for="DisplayName" id="displayName" />
            </div>
            <div class="mb-3">
                <div class="d-flex ms-2" >
                    <button type="submit" class="btn btn-dark">Update</button>

                    <button type="submit"
                            class="btn btn-danger ms-2"
                            asp-area=""
                            asp-action="Delete"
                            asp-controller="AdminTags">
                        Delete
                    </button>
                </div>
            </div>
        </form>

    }
    else
    {
        <p>Tag not found!</p>
    } 
</div>
