@model Bloggi.Web.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}



<div class="container mt-3 mb-3">
    <div class="row justify-content-center">
        <div class="col-6 d-flex">
            @if(Model !=null && Model.Tags.Any())
            {
                foreach( var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-1">
                        @tag.Name
                    </span>
                }
            }
        </div>
    </div>
</div>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if(Model !=null && Model.BlogPosts.Any())
            {
                foreach (var blogPost in Model.BlogPosts)
                {
                    <div class="mb-5 bg-light box-shadow p-2">
                        <img src="@blogPost.FeaturedImageUrl" 
                            alt="@blogPost.Heading" 
                            class="mb-2 d-block img-fluid" hight="100px" width="100%"
                            />
                        <h4 class="mb-1">@blogPost.Heading</h4>
                        <p class="mb-2">
                            <strong>Author:</strong> @blogPost.Author
                            <br />
                            <strong>Published Date:</strong> @blogPost.PublishedDate.ToShortDateString()

                        </p>
                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary">@tag.Name</span>
                            }
                        </p>
                     
                        <p class="mb-4">
                            @blogPost.ShortDescription
                        </p>


                        <a class="btn btn-dark"
                           asp-area=""
                           asp-controller="Blog"
                           asp-action="Index"
                           asp-route-urlHandle="@blogPost.UrlHandle">
                            Read More
                        </a>

                    </div>
                }
            }

        </div>
    </div>

</div>